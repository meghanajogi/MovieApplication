<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragment.ShowMovieDetailsFragment">
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/movieDetails"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_300sdp"
    app:layout_constraintTop_toTopOf="parent"
    android:background="@color/blue"
    android:padding="@dimen/_20sdp"
    app:layout_constraintStart_toStartOf="parent">
    <ImageView
        android:id="@+id/back_arrow"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/movies"
        android:fontFamily="@font/poppins_medium"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/white"/>

    <ImageView
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_upload"/>
    <ImageView
        android:id="@+id/imagePoster"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_150sdp"
        android:scaleType="fitXY"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_15sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/back_arrow"/>
    <TextView
        android:id="@+id/movieTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imagePoster"
        app:layout_constraintTop_toTopOf="@id/imagePoster"
        android:layout_marginStart="@dimen/_20sdp"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_medium"
        android:textSize="@dimen/_16ssp"/>
    <TextView
        android:id="@+id/language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:textColor="@color/white"
        android:textSize="@dimen/_12ssp"
        android:fontFamily="@font/poppins_medium"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintStart_toEndOf="@id/imagePoster"
        app:layout_constraintTop_toBottomOf="@id/movieTitle"/>
    <View
        android:id="@+id/verticalView"
        android:layout_width="@dimen/_1sdp"
        android:layout_height="@dimen/_15sdp"
        app:layout_constraintStart_toEndOf="@id/language"
        android:background="@color/white"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@id/movieTitle"/>
    <TextView
        android:id="@+id/releaseDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:textColor="@color/white"
        android:textSize="@dimen/_12ssp"
        android:fontFamily="@font/poppins_medium"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintStart_toEndOf="@id/verticalView"
        app:layout_constraintTop_toBottomOf="@id/movieTitle"/>

<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/generesRecycler"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_20sdp"
    android:layout_marginStart="@dimen/_20sdp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@id/imagePoster"
    app:layout_constraintTop_toBottomOf="@id/releaseDate"/>
    <RatingBar
        android:id="@+id/movieRatings"
        android:layout_width="wrap_content"
        android:numStars="5"
        style="?android:attr/ratingBarStyleIndicator"
        android:rating="4.5"
        android:progressTint="@color/white"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/generesRecycler"
        app:layout_constraintStart_toEndOf="@id/imagePoster"
        />
    <TextView
        android:id="@+id/reviews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reviews"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/white"
        android:textSize="@dimen/_12ssp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_20sdp"
        app:layout_constraintStart_toEndOf="@id/imagePoster"
        app:layout_constraintTop_toBottomOf="@id/movieRatings"/>

    <TextView
        android:id="@+id/votes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:textSize="@dimen/_12ssp"
        android:layout_marginStart="@dimen/_10sdp"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/reviews"
       app:layout_constraintTop_toTopOf="@id/reviews"/>

</androidx.constraintlayout.widget.ConstraintLayout>


    <Button
        android:id="@+id/bookNowBtn"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/_12ssp"
        android:text="@string/book"
        android:textColor="@color/blue"
        android:fontFamily="@font/poppins_medium"
        android:background="@drawable/button_background"
        app:backgroundTint="@null"
        app:layout_constraintTop_toBottomOf="@id/movieDetails"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_minus10sdp"
        />
    <TextView
        android:id="@+id/synopsis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/synopsis"
        android:textSize="@dimen/_16ssp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/blue"
        app:layout_constraintTop_toBottomOf="@id/bookNowBtn"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_20sdp"/>

    <TextView
        android:id="@+id/details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:textSize="@dimen/_12ssp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:textColor="@color/blue"
        app:layout_constraintTop_toBottomOf="@id/synopsis"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_20sdp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
</layout>